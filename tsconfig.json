{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {}
  },
  "compilerOptions": {
    "target": "ES6",                                  
    "module": "CommonJS",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDir": "./src"

  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", ".vscode"]
}
